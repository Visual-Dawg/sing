{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "vitest/importMeta"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@sing-main/*": ["../main/src/*"],
      "@sing-backend/*": ["../backend/src/*"],
      "@sing-preload/*": ["../preload/src/*"],
      "@sing-types/*": ["../../types/*"],
      "@sing-prisma": ["../generated/client"]
    }
  },
  "include": [
    "**/*.ts",
    "src/**/*.ts",
    "../backend/src/types/**.ts",
    "../../types/**/*.d.ts",
    "../../types/Track.ts",
    "../preload/src/Crud.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "tests/**/*.ts",
    "src/_Scratch.js"
  ],
  "exclude": ["./dist/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc",
    "require": ["tsconfig-paths/register"]
  }
}
