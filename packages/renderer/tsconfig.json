{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "./**/*",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/contracts.d.ts"
  ],
  "exclude": ["./assets/**/*"],

  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,

    "types": ["node", "svelte", "unplugin-icons/types/svelte"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@sing-main/*": ["../main/src/*"],
      "@sing-preload/*": ["../preload/src/*"],
      "@sing-types/*": ["../../types/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  }
}
