{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,

    "types": ["node", "unplugin-icons/types/svelte"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "src/**/*.svelte",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/contracts.d.ts",
    "src/types/types.d.ts",
    "../../types/Track.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
