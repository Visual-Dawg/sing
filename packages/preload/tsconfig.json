{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "@sing-main/*": ["../main/src/*"],
      "@sing-types/*": ["../../types/*"]
    },

    "types": ["node"],

    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "./test/**/*",
    "contracts.d.ts",
    "../../types/**/*.d.ts",
    "preload.ts",
    "../../types/Track.ts",
    "../main/src/lib/Metadata.ts",
    "../main/src/lib/Crud.ts",
    "../main/src/lib/Sync.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
