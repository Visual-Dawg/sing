{
  "name": "sing",
  "private": true,
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && npm run build:backend",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "build:backend": "cd ./packages/backend && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main | npm run test:preload | npm run test:renderer | npm run test:backend | npm run test:e2e",
    "test:e2e": "npm run build && vitest run --threads false",
    "test:main": "vitest run -r packages/main --passWithNoTests --threads false",
    "test:backend": "vitest run -r packages/backend --passWithNoTests --threads false",
    "test:backend-watch": "vitest -r packages/backend --passWithNoTests --threads false",
    "test:main-watch": "vitest  -r packages/main --passWithNoTests --threads false",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "test:renderer-watch": "vitest  -r packages/renderer --passWithNoTests",
    "test:circular-dependencies": "npx madge --circular --extensions ts,svelte --exclude 'music-metadata' ./packages/",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,svelte",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "svelte-check --tsconfig packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "deps-check": "ncu -x slash",
    "deps-update": "ncu -x slash -u"
  },
  "devDependencies": {
    "@iconify/json": "^2.1.81",
    "@sveltejs/vite-plugin-svelte": "^1.0.1",
    "@testing-library/svelte": "^3.1.3",
    "@tsconfig/svelte": "^3.0.0",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "autoprefixer": "^10.4.7",
    "cross-env": "7.0.3",
    "electron": "^19.0.9",
    "electron-builder": "23.1.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "fishery": "^2.2.2",
    "jsdom": "^20.0.0",
    "memfs": "^3.4.7",
    "playwright": "^1.24.0",
    "postcss": "^8.4.14",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4",
    "unplugin-icons": "^0.14.7",
    "vite": "^3.0.2",
    "vitest": "^0.19.0"
  },
  "dependencies": {
    "@prisma/client": "^4.1.0",
    "ansicolor": "^1.1.100",
    "electron-store": "^8.0.2",
    "electron-updater": "5.0.5",
    "eslint-config-airbnb-base": "^15.0.0",
    "fp-ts": "^2.12.1",
    "fp-ts-std": "^0.14.2",
    "hexoid": "^1.0.0",
    "history": "^5.3.0",
    "io-ts": "^2.2.16",
    "music-metadata": "^7.12.5",
    "ololog": "^1.1.175",
    "prisma": "^4.1.0",
    "slash": "^3.0.0",
    "svelte-navigator": "^3.1.6"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
